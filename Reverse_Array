#include <bits/stdc++.h>
using namespace std;
void Reverse(int arr[],int n)
{
    int low = 0, high = n-1;
    while(low < high)
    {
        int temp = arr[low];
        arr[low]=arr[high];
        arr[high]=temp;
        low++;
        high--;
    }
}
void printArray(int arr[], int size)
{
   for (int i = 0; i < size; i++)
   cout << arr[i] << " ";
 
   cout << endl;
} 
int main() 
{
    int arr[] = {1, 2, 3, 4, 5, 6};
     
    int n = sizeof(arr) / sizeof(arr[0]); 
 
    // To print original array 
    printArray(arr, n);
     
    // Function calling
    Reverse(arr, n);
     
    cout << "Reversed array is" << endl;
     
    // To print the Reversed array
    printArray(arr, n);
     
    return 0;
}
